# Kafka Cluster Configuration
CLUSTER_ID=your_kafka_cluster_id_here

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/ticket_platform?serverTimezone=UTC
SPRING_DATASOURCE_USERNAME=your_db_user
SPRING_DATASOURCE_PASSWORD=your_db_password

# Database Pool Settings (for QueryService and MqProjectionService)
SPRING_DS_MIN_IDLE=5
SPRING_DS_MAX_POOL=20
SPRING_DS_CONN_TIMEOUT=30000

# Redis Configuration  
SPRING_DATA_REDIS_HOST=localhost
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=your_redis_password

# AWS DynamoDB Configuration
AWS_DYNAMODB_REGION=us-west-2
AWS_DYNAMODB_END_POINT=http://localhost:8000
AWS_DYNAMODB_ACCESS_KEY=your_aws_key
AWS_DYNAMODB_ACCESS_PASS=your_aws_secret

# Kafka Configuration
KAFKA_BROKERS=kafka-1:9092,kafka-2:9092,kafka-3:9092
KAFKA_CONSUMER_CONCURRENCY=6

# Application Configuration
TICKETS_BOOTSTRAP_VENUE_REDIS=true
ENVIRONMENT=local